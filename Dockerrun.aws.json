{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions" : [
		{
			"name":"client",
			"image":"sinch5/multi-client",
			"hostname": "client",
			"essential": false	
		},
		{ 
			"name":"server",
			"image":"sinch5/multi-server",
			"hostname":"api",
			"essential":false			
		},
		{ 
			"name":"worker",
			"image":"sinch5/multi-worker",
			"hostname":"worker",
			"essential":false			
		},
		{ 
			"name":"nginx",
			"image":"sinch5/multi-nginx",
			"hostname":"nginx",
			"essential":true,
			"portMapping":[
				{
				 "hostPort":80,
				 "containerPort":80
				}
			],
			"links":["client","server"]
		}
	]
}